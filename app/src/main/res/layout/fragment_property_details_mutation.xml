<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Property Type"-->
<!--                    android:fontFamily="@font/poppins_regular"-->
<!--                    android:textColor="@color/primary"-->
