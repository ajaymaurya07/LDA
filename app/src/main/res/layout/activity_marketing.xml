<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/last_01">

        <View
            android:id="@+id/white_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--        app bar-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/nav_bar">

            <TextView
                android:id="@+id/nav_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marketing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/primary" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--        main layout-->
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nav_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nav_bar"
                app:layout_constraintBottom_toBottomOf="parent">


                <LinearLayout
                    android:id="@+id/heroCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/header_div"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- LDA Logo -->
                        <ImageView
                            android:id="@+id/imgLdaLogo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/logo_hunter"
                            android:contentDescription="@string/app_name"
                            app:tint="@android:color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="10dp">

                            <!-- Hindi Title -->
                            <TextView
                                android:id="@+id/tvCampaignTitleHindi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.01"
                                android:text="अपनी संपत्ति, अपना अधिकार"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium" />

                            <!-- English Title -->
                            <TextView
                                android:id="@+id/tvCampaignTitleEn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apni Sampatti, Apna Adhikar"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Image with rounded corners -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgFamily"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_02"
                        android:contentDescription="@string/app_name"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="24dp"
                    app:layout_constraintTop_toBottomOf="@id/heroCard">

                    <!-- Newspaper / Poster text -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/posterCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Breaking News Label -->
                            <TextView
                                android:id="@+id/tvNewsBlink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:background="#FFFF00"
                                android:text="@string/announment"
                                android:textColor="#FF0000"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <!-- Heading -->
                            <TextView
                                android:id="@+id/tvPosterHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/black"
                                android:text="Lucknow Development Authority (LDA) is building a Unified Property Register for better citizen services."
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_bold" />

                            <!-- Body -->
                            <TextView
                                android:id="@+id/tvPosterBody"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:lineHeight="20sp"
                                android:text="@string/news_text"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <!-- Benefits -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/benefitsCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvBenefitsTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Benefits of Registration"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• Legal recognition of your property" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• Access to NOC, mutation, and building plan services" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• Inclusion in future smart city and development plans" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <!-- Contact / Links -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/contactCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:divider="@drawable/divider_line"
                            android:showDividers="middle">

                            <!-- Website -->
                            <LinearLayout
                                android:id="@+id/layoutWebsite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/website"
                                    app:tint="@color/secondary" />

                                <TextView
                                    android:id="@+id/tvOnline"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:text="Visit: ldalucknow.in"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/montserrat_bold" />
                            </LinearLayout>

                            <!-- Call -->
                            <LinearLayout
                                android:id="@+id/layoutCall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginVertical="10dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/phone"
                                    app:tint="@color/secondary" />

                                <TextView
                                    android:id="@+id/tvCall"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:text="Call: LDA Helpline Number"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/montserrat_bold" />
                            </LinearLayout>

                            <!-- WhatsApp -->
                            <LinearLayout
                                android:id="@+id/layoutWhatsapp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/whatsapp"
                                     />

                                <TextView
                                    android:id="@+id/tvWhatsapp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:text="WhatsApp: Connect Us"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/montserrat_bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>