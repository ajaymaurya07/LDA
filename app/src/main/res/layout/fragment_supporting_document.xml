<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".formfragment.mutation.SupportingDocument">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/image_upload"
                    android:id="@+id/img_01"/>

                <include layout="@layout/image_upload"
                    android:id="@+id/img_02"/>

                <include layout="@layout/image_upload"
                    android:id="@+id/img_03"/>


            </LinearLayout>
        </ScrollView>




    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_regular"
                android:text="I hereby declare that the information provided is true and correct."/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mutation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Application"
            android:backgroundTint="@color/secondary"
            android:paddingVertical="16dp"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>